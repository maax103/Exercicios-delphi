{$R *.dfm}

function isBiggerThan80(aNum : Double) : Boolean;
begin
  if aNum > 80 then
    Result := True
  else
    Result := False;
end;

function isSmallerThan25(aNum : Double) : Boolean;
begin
  if aNum < 25 then
    Result := True
  else
    Result := False;
end;

function isEqualTo40(aNum : Double) : Boolean;
begin
  if aNum = 40 then
    Result := True
  else
    Result := False;
end;

procedure TForm2.btnStartClick(Sender: TObject);
var
  xInputNumber: Integer;

begin

  memResult.Clear;
  xInputNumber := StrToIntDef(InputBox('Informar','Número: ',''),0);
  MessageDlg('Teste', mtInformation, [mbOK], 0);

  end;

end.
